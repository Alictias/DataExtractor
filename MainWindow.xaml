<Window x:Class="DataExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataExtractor"
        mc:Ignorable="d"
        Title="Data Extractor" Height="791.833" Width="1406.833"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        KeyDown="Window_KeyDown"
        Focusable="True"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="151*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,664" Grid.RowSpan="2"/>

        <Image x:Name="UploadedImage" Grid.Row="1" Stretch="Uniform" Margin="0,0,279,0" />


        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,340,0">
            <UniformGrid Columns="5" Margin="10" HorizontalAlignment="Stretch">
                <!-- Slot 1 -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <StackPanel>
                        <Button Content="Clear" Click="ClearSlot1_Click" Height="20"/>
                        <Button Content="Paste Here" Click="PasteToSlot1_Click" Height="20"/>
                        <Image x:Name="ImageSlot1" Stretch="Uniform" Margin="10"/>
                    </StackPanel>
                </Border>

                <!-- Slot 2 -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <StackPanel>
                        <Button Content="Clear" Click="ClearSlot2_Click" Height="20"/>
                        <Button Content="Paste Here" Click="PasteToSlot2_Click" Height="20"/>
                        <Image x:Name="ImageSlot2" Stretch="Uniform" Margin="10"/>
                    </StackPanel>
                </Border>
                <!-- Slot 3 -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <StackPanel>
                        <Button Content="Clear" Click="ClearSlot3_Click" Height="20"/>
                        <Button Content="Paste Here" Click="PasteToSlot3_Click" Height="20"/>
                        <Image x:Name="ImageSlot3" Stretch="Uniform" Margin="10"/>
                    </StackPanel>
                </Border>
                <!-- Slot 4 -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <StackPanel>
                        <Button Content="Clear" Click="ClearSlot4_Click" Height="20"/>
                        <Button Content="Paste Here" Click="PasteToSlot4_Click" Height="20"/>
                        <Image x:Name="ImageSlot4" Stretch="Uniform" Margin="10"/>
                    </StackPanel>
                </Border>
                <!-- Slot 5 -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                    <StackPanel>
                        <Button Content="Clear" Click="ClearSlot5_Click" Height="20"/>
                        <Button Content="Paste Here" Click="PasteToSlot5_Click" Height="20"/>
                        <Image x:Name="ImageSlot5" Stretch="Uniform" Margin="10"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </ScrollViewer>

        <TextBox x:Name="ExtractedTextBox" Grid.Row="1" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,10,0,59" HorizontalAlignment="Right" Width="335"/>
        <Button x:Name="csvExport" Content="Export CSV" Margin="0,0,0,31" Click="csvExport_click" Grid.Row="1" HorizontalAlignment="Right" Width="130" Height="23" VerticalAlignment="Bottom"/>
        <ComboBox x:Name="progList" Margin="0,0,146,10" SelectionChanged="ComboBox_SelectionChanged" Grid.Row="2" HorizontalAlignment="Right" Width="130" Height="23" VerticalAlignment="Bottom">
            <ComboBoxItem Content="PROG_00"/>
            <ComboBoxItem Content="PROG_01"/>
            <ComboBoxItem Content="PROG_02"/>
            <ComboBoxItem Content="PROG_03"/>
            <ComboBoxItem Content="PROG_04"/>
            <ComboBoxItem Content="PROG_05"/>
            <ComboBoxItem Content="PROG_06"/>
            <ComboBoxItem Content="PROG_07"/>
            <ComboBoxItem Content="PROG_08"/>
            <ComboBoxItem Content="PROG_09"/>
            <ComboBoxItem Content="PROG_10"/>
        </ComboBox>
        <Button  Content="Extract Text" Click="ExtractText_Click" Margin="0,0,144,31" Grid.Row="1" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="130"/>
        <Button x:Name="addCsv" Content="Add to existing CSV" Margin="0,0,0,10" Click="addCsv_click" Grid.Row="2" HorizontalAlignment="Right" Width="130" Height="23" VerticalAlignment="Bottom"/>
        <CheckBox x:Name="lastCsv" Content="Add to last CSV" Margin="0,0,-18,3" Grid.Row="1" VerticalAlignment="Bottom" Checked="CheckBox_Checked" HorizontalAlignment="Right" Width="148" Height="15"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="processTxt"  Content="Process Text" Click="processTxt_Click" Margin="0,0,146,0" Grid.Row="1" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="130"/>
        <Label x:Name="lastSavedCsv" Content="Last File Saved:" Margin="0,-3,244,0" Grid.RowSpan="2" Height="26" VerticalAlignment="Top" HorizontalAlignment="Right" Width="91"/>
        <Label x:Name="lastSavedCsvName" Content="" Margin="0,-3,0,0" Grid.RowSpan="2" Height="26" VerticalAlignment="Top" HorizontalAlignment="Right" Width="244"/>

    </Grid>

</Window>
